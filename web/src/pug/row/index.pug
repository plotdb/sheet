extends /base.pug
block prehead
  base(href="..")
block head
  style(type="text/css"): :stylus
    html, body { width: 100%; height: 100%; background: #fff }
    .sheet
      position: relative
      border-width: 1px
      border-style: solid
      border-color: #999
      width: fit-content
      .srow
        display: grid
        grid-template-columns: repeat(28, 48px)
        width: fit-content
      /*.srow
        display: flex
        flex-wrap: nowrap
        width: fit-content
      */
      .scell
        user-select: none
        border-width: 0 1px 1px 0
        border-style: solid
        border-color: #ddd
        /* use em may lead to nondeterminstic behavior in border rendering, due to rounding */
        padding: 1px
        min-width: 48px
        min-height: 26px
        line-height: 26px
        flex: 0 0 auto
        box-sizing: border-box
      .scell:last-child
        border-right-width: 0
      .srow:last-child .scell
        border-bottom-width: 0
      .srow.idx, .srow .scell:first-child
        position: sticky
        background: #f1f2f3
        color: #919293
        font-size: .85em
        text-align: center
      .srow.idx
        z-index: 101
        top: 0
      .srow .scell:first-child
        z-index: 100
        left: 0
      .scell.idx
        user-select: none
    .sel
      z-index: 10
      border: 1px solid #27f
      position: absolute
      display: none
      user-select: none
      pointer-events: none
    .sel-main
      z-index: 11
      border: 2px solid #27f
      position: absolute
      display: none
      user-select: none
      pointer-events: none
    .edit
      z-index: 21
      border: 2px solid #27f
      position: absolute
      display: none
      textarea
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        border: none
        outline: none

block body
  .w-1024.rwd.mx-auto.my-4: .aspect-ratio.ratio-2by1
    .sheet.w-100.h-100(style="overflow:scroll")
      .edit: textarea
      .sel
      .sel-main
      .sel-main
      .srow.idx
        - var cols = " ABCDCEFGHIJKLMNOPQRSTUVWXYZ".split('')
        each i in cols
          .scell.idx= i
      each k in [1,2,3,4,5,6]
        each m in [1,2,3,4,5,6]
          .srow
            .scell.idx= m + ( k - 1 ) * 6
            .scell
            .scell
            each i in [1,2,3,4,5]
              each j in [1,2,3,4,5]
                .scell

block script
  script: include:lsc index.ls
